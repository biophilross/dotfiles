# simple math function in python
calc () { python -c "from math import *; print $1"; }

# echo specifically to stderr
function echoerr () {
  echo "$@" 1>&2;
}

# connect to lab server
# assumes that "lab" is an alias
# set up in $HOME/.bash_aliases
function labserver () {
  lab -NL $1:dockerhost:$1
}
